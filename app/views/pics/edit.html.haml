#edit_page.col-md-8.col.md-offset-2
  .row
    .panel.panel-default
      .panel-heading
        %h1 Edit Pic
      .panel-body
        .current_image
          %strong.center Right Now
          = image_tag @pic.image.url(:medium)
      
        =render 'form'
        %br
        .btn-group.pull-right
          - if user_signed_in?
            = link_to 'Show', @pic, class: "btn btn-info"
            = link_to 'Back', pics_path, class: "btn btn-info"
            = link_to 'Delete', pic_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"
